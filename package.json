{
  "name": "helloworld",
  "displayName": "HelloWorld",
  "description": "LEAVE BLANK",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers"
  ],
  "activationEvents": [
    "onLanguage:solidity"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "debuggers": [
      {
        "type": "solidity",
        "languages": [
          "solidity"
        ],
        "label": "Solidity Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              },
              "compileError": {
                "type": "string",
                "description": "Simulates a compile error in 'launch' request.",
                "enum": [
                  "default",
                  "show",
                  "hide"
                ],
                "enumDescriptions": [
                  "default: show fake compile error to user",
                  "show fake compile error to user",
                  "do not show fake compile error to user"
                ]
              }
            }
          },
          "attach": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after attach.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              },
              "compileError": {
                "type": "string",
                "description": "Simulates a compile error in 'attach' request.",
                "enum": [
                  "default",
                  "show",
                  "hide"
                ],
                "enumDescriptions": [
                  "default: show fake compile error to user",
                  "show fake compile error to user",
                  "do not show fake compile error to user"
                ]
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "solidity",
            "request": "launch",
            "name": "Launch Solidity",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "Solidity Debug: Launch",
            "description": "A new configuration for 'debugging' a solidity file.",
            "body": {
              "type": "solidity",
              "request": "launch",
              "name": "Launch Solidity",
              "program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
              "stopOnEntry": true
            }
          }
        ],
        "variables": {
          "AskForProgramName": "extension.solidity-debug.getProgramName"
        }
      }
    ],
    "breakpoints": [
      {
        "language": "solidity"
      }
    ],
    "snippets": [
      {
        "language": "solidity",
        "path": "./extension/snippets/solidity.json"
      }
    ],
    "grammars": [
      {
        "language": "solidity",
        "scopeName": "source.solidity",
        "path": "./extension/syntaxes/solidity.json"
      }
    ],
    "languages": [
      {
        "id": "solidity",
        "aliases": [
          "Solidity",
          "solidity"
        ],
        "extensions": [
          ".sol"
        ],
        "configuration": "./solidity.configuration.json"
      }
    ],
    "commands": [
      {
        "command": "extension.solidity-debug.copyContractAddress",
        "title": "Copy Contract Address",
        "shortTitle": "Copy",
        "enablement": "view == sc-deploy-history && viewItem == contract",
        "icon": "asset/copy.svg",
        "when": "view == sc-deploy-history && viewItem == contract"
      },
      {
        "command": "extension.solidity-debug.debugContract",
        "title": "Debug Contract",
        "shortTitle": "Debug",
        "enablement": "view == sc-deploy-history && viewItem == contract",
        "icon": "asset/debug.svg",
        "when": "view == sc-deploy-history && viewItem == contract"
      },
      {
        "command": "extension.solidity-debug.copyTxHash",
        "title": "Copy Transaction Hash",
        "shortTitle": "Copy",
        "enablement": "view == sc-deploy-history && viewItem == transaction",
        "icon": "asset/copy.svg",
        "when": "view == sc-deploy-history && viewItem == transaction"
      },
      {
        "command": "extension.solidity-debug.debugTransaction",
        "title": "Debug Transaction",
        "shortTitle": "Debug",
        "enablement": "view == sc-deploy-history && viewItem == transaction",
        "icon": "asset/debug.svg",
        "when": "view == sc-deploy-history && viewItem == transaction"
      },
      {
        "command": "extension.solidity-debug.settings",
        "title": "SCLens Settings",
        "shortTitle": "Settings",
        "enablement": "view == sc-settings",
        "icon": "asset/settings.svg",
        "when": "view == sc-settings"
      },
      {
        "command": "extension.solidity-debug.settings.addAccount",
        "title": "Add Account Address",
        "shortTitle": "Account Address",
        "enablement": "view == sc-settings && viewItem == account",
        "icon": "asset/add.svg",
        "when": "view == sc-settings"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "extension.solidity-debug.copyContractAddress",
          "when": "view == sc-deploy-history && viewItem == contract",
          "group": "inline@2"
        },
        {
          "command": "extension.solidity-debug.debugContract",
          "when": "view == sc-deploy-history && viewItem == contract",
          "group": "inline@1"
        },
        {
          "command": "extension.solidity-debug.copyTxHash",
          "when": "view == sc-deploy-history && viewItem == transaction",
          "group": "inline@2"
        },
        {
          "command": "extension.solidity-debug.debugTransaction",
          "when": "view == sc-deploy-history && viewItem == transaction",
          "group": "inline@1"
        },
        {
          "command": "extension.solidity-debug.settings",
          "when": "view == sc-settings",
          "group": "inline@2"
        },
        {
          "command": "extension.solidity-debug.settings.addAccount",
          "when": "view == sc-settings && viewItem == account",
          "group": "inline@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sc-act-bar",
          "title": "SCLens",
          "icon": "asset/eth.svg"
        }
      ]
    },
    "views": {
      "sc-act-bar": [
        {
          "id": "sc-settings",
          "name": "Settings"
        }
      ],
      "debug": [
        {
          "id": "sc-deploy-history",
          "name": "Contract Deploy History",
          "when": "workspaceHasSolidity",
          "icon": "asset/smart_contract.svg",
          "contextualTitle": "Contract Deploy History Explorer"
        },
        {
          "id": "scLens.instructionTree",
          "name": "Instruction List",
          "when": "workspaceHasSolidity",
          "contextualTitle": "Solidity EVM Instruction Explorer"
        }
      ]
    }
  },
  "scripts": {
    "install:all": "npm install && npm --prefix ./webview-ui install ./webview-ui",
    "start:webview": "npm --prefix ./webview-ui run start",
    "test:webview": "npm --prefix ./webview-ui run test",
    "build:webview": "npm --prefix ./webview-ui run build",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/path-browserify": "^1.0.0",
    "@types/semver": "^7.3.10",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "@vscode/debugadapter": "^1.56.0",
    "@vscode/test-electron": "^2.1.5",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "path-browserify": "^1.0.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@erebos/bzz-node": "^0.13.0",
    "@ethereumjs/tx": "^3.5.2",
    "@remix-project/remix-astwalker": "^0.0.44",
    "@remix-project/remix-debug": "^0.5.14",
    "@remix-project/remix-lib": "^0.5.14",
    "await-notify": "^1.0.1",
    "axios": "^0.27.2",
    "ethereumjs-util": "^7.1.5",
    "semver": "^7.3.7",
    "solc": "^0.8.15",
    "string-similarity": "^4.0.4",
    "vscode-languageclient": "^8.0.1",
    "vscode-languageserver": "^8.0.1",
    "web3": "^1.7.4"
  }
}
